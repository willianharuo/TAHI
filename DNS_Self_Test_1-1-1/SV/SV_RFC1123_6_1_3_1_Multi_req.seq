$gen_dns_msg_5[0]->{'header'}->{'rd'} = $recv_data->{'header'}->{'rd'};

$ret = undef;
$ret = DNSSend(
        1,
        $dns_session[4]->{'socket_ref'},
        $dns_session[4]->{'dns_one_session'}->[0]
