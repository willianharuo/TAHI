	$ret = undef;
	$ret = JudgeDNSMsg( $recv_data, $exp_dns_msg_5[0] );

	if ( defined($ret) ) {
		last;
	}
	$i++;
}
Print_Message( "=", ["6th packet PASS\n"] );

