#define HOP_LIMIT		0

#include "./IH_Router.def"

FEM_icmp6_time_exceeded(
	icmp_type3_code0,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL0_ADDR);
		_DST(TN_GL0_ADDR);
	},
	{
		Code = 0;	// hop limit exeeded in transit
		payload = err;
	}
)

FEM_icmp6_time_exceeded(
	icmp_type3_code0_link1,
	_HETHER_nut2tn,
	{
		_SRC(NUT_GL1_ADDR);
		_DST(TN_GL0_ADDR);
	},
	{
		Code = 0;	// hop limit exeeded in transit
		payload = err;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(echo_request_to_link0), 0);
}
