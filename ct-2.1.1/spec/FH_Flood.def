#include "./ID.def"

//
// echo_request
//
// - Echo Request
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload = echo_data1024;
	}
)

Payload echo_data1024 {
	data = repeat(1, 512);
	data = repeat(2, 512);
}

//
// echo_request_1st
//
// - Echo Request (Fragment packets) (1st)
//
//////////////////////////////////////////////////////////////////////

FEM_hdr_ipv6_exth(
	echo_request_1st,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(echo_request_1st);
		exthdr = frag_1st;
		upper = payload_1st;
	}
)

Hdr_Fragment frag_1st {
	NextHeader = 58;
	FragmentOffset = 0;
	MFlag = 1;
	Identification = FRAG_ID;
}

Payload payload_1st {
	data = substr(_PACKET_IPV6_NAME(echo_request), 40, 520);
}

//
// echo_request_2nd
//
// - Echo Request (Fragment packets with Overlap data) (2nd)
//
//////////////////////////////////////////////////////////////////////

FEM_hdr_ipv6_exth(
	echo_request_2nd,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(echo_request_2nd);
		exthdr = frag_2nd;
		upper = payload_2nd;
	}
)

Hdr_Fragment frag_2nd {
	NextHeader = 58;
	FragmentOffset = 65;    // 520/8
	MFlag = 0;
	Identification = FRAG_ID;
}

Payload payload_2nd {
	data = substr(_PACKET_IPV6_NAME(echo_request), 560, 512);
}

//
// echo_request_ex
//
// - Echo Request (Fragment Header - last)
//
//////////////////////////////////////////////////////////////////////

FEM_hdr_ipv6_exth(
	echo_request_ex,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(echo_request_ex);
		exthdr = frag_last;
		upper = payload_last;
	}
)

Hdr_Fragment frag_last {
	NextHeader = 58;        // ignored
//	FragmentOffset = 8125;    // 65000/8
	FragmentOffset = 7500;    // 60000/8
//	FragmentOffset = 6250;    // 50000/8
	MFlag = 0;
	Identification = IDENTIFICATION;
}

Payload payload_last {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}

//
// multicast_ns
//
// - Multicast Neighbor Solicitation
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_ns(
	multicast_ns,
	_HETHER_nut2tnsolnode,
	{
		_SRC(oneof(nutv6(), nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN, "Link0")));
		_DST(_IPV6_SOLNODE_MCAST(tnv6()));
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

//
// unicast_ns
//
// - Unicast Neighbor Solicitation
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_ns(
	unicast_ns,
	_HETHER_nut2tn,
	{
		_SRC(oneof(nutv6(), nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN, "Link0")));
		_DST(tnv6());
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

//
// echo_reply
//
// - Echo Reply
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_reply(
	echo_reply,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		payload = echo_data1024;
	}
)

//
// na
//
// - Neighbor Advertisement
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_na(
	na,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		SFlag = 1;
		OFlag = 1;
		TargetAddress = tnv6();
		option = _TLLOPT_tn;
	}
)
