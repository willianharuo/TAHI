//
// param_problem_0
//
// - Parameter Problem (erroneous header field encountered)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_parameter_problem(
	param_problem_0,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 0;       // erroneous header field encountered
		Pointer = 42;
		payload = err;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(echo_request_ex), 0);
}

//
// param_problem_1
//
// - Parameter Problem (unrecognized Next Header type encountered)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_parameter_problem(
	param_problem_1,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 1;       // unrecognized Next Header type encountered
		Pointer = 6;    // Next Header
		payload = err;
	}
)

//
// param_problem_2
//
// - Parameter Problem (unrecognized IPv6 option encountered)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_parameter_problem(
	param_problem_2,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 2;        // unrecognized IPv6 option encountered
		Pointer = 50;
		payload = err;
	}
)

//
// echo_request
//
// - Echo Request
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload = echo_data8;
	}
)

Payload echo_data8 {
	data = {1, 2, 3, 4, 5, 6, 7, 8};
}

//
// echo_request_ex
//
// - Echo Request (Unrecognized Next Header in Destination Options Header)
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_echo_request_exth(
	echo_request_ex,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		NextHeader = NEXTHEADER;
	},
	{
		header = _HDR_IPV6_NAME(echo_request_ex);
		exthdr = opt_PadN;
		upper = _ICMPV6_NAME(echo_request_ex);
	},
	{
		payload = echo_data8;
	}
)

Hdr_Destination opt_PadN {
	option = _PadN;
}

Opt_PadN _PadN {
	pad = {0, 0, 0, 0};
}

//
// multicast_ns
//
// - Multicast Neighbor Solicitation
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_ns(
	multicast_ns,
	_HETHER_nut2tnsolnode,
	{
		_SRC(oneof(nutv6(), nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN, "Link0")));
		_DST(_IPV6_SOLNODE_MCAST(tnv6()));
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

//
// unicast_ns
//
// - Unicast Neighbor Solicitation
//
//////////////////////////////////////////////////////////////////////

FEM_icmp6_ns(
	unicast_ns,
	_HETHER_nut2tn,
	{
		_SRC(oneof(nutv6(), nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN, "Link0")));
		_DST(tnv6());
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

