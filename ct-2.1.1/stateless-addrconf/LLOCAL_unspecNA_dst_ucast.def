// LLOCAL_unspecNA_dst_ucast.def
//
//   You have to define the following name of frames. 
// DADV6ADDR              : v6 Tentative address for DAD
// dadns_from_NUT         : DAD NS comming from NUT on DAD
// chkconf_dadns_to_NUT   : DAD NS send to NUT to check if address is configured
// chkconf_dadna_from_NUT : DAD NA comming from NUT if addrss is configured
// dadpkt_to_NUT          : DAD Packet send to NUT to test DAD
//
// $TAHI: ct/stateless-addrconf/LLOCAL_unspecNA_dst_ucast.def,v 1.4 2001/10/05 06:39:21 masaxmasa Exp $

//
// DADV6ADDR
// dadns_from_NUT
// chkconf_dadns_to_NUT
// chkconf_dadna_from_NUT
// hether_nut2tentsolnode
// hether_tn2tentsolnode
//    to define this, include the basic definition file.
#include "BASIC.def"


//
// dadpkt_to_NUT
//  Description: 
//    DAD Packet send to NUT to test DAD
//  Spec:
//    unspecified DAD NA
//    DestinationAddress is a unicast address of the tentative address.
//    (regulary ALLNODES_MCAST_ADDR)

FEM_icmp6_na(  dadpkt_to_NUT, _HETHER_nut2nut,
	    {  _SRC(DADV6ADDR);
	       _DST(DADV6ADDR); // unspecified DAD NA
	       HopLimit=255; },
            {  RFlag=0;   // host (MUST)
               SFlag=0;   // (MUST)
	       OFlag=1;   // (SHOULD)
	       TargetAddress=DADV6ADDR;
	       option=_TLLOPT_nut; }
)


//end
