#include "PMTU.def"

///////////////////////////////////
//
// Packets for HOST A or related A
//
///////////////////////////////////

//////////////////////////
// Ping packet
// size 1280

FEM_icmp6_echo_request(
         echo_request_1280_from_A,
         _HETHER_tn2nut,
        {
                 _SRC(v6("3ffe:501:ffff:10a0::1"));
                 _DST(NUT_GLOBAL_ADDRESS);
        },
        {
                 payload=ping_data_1232;
        }
)

FEM_icmp6_echo_reply(
         echo_reply_1280_to_A,
         _HETHER_nut2tn,
        {
                 _SRC(NUT_GLOBAL_ADDRESS);
                 _DST(v6("3ffe:501:ffff:10a0::1"));
        },
        {
                 payload=ping_data_1232;
        }
)

//////////////////////////
// Too Big Messages

FEM_icmp6_packet_too_big(
        icmp6_TooBigMesg_1200_for_1280_A,
        _HETHER_tn2nut,
                {
                _SRC(v6("3ffe:501:ffff:10a1::1"));
                _DST(NUT_GLOBAL_ADDRESS);
        },
                {
                MTU     = 1200;
                payload = TooBigData_1280_A;
        }
) 

Payload TooBigData_1280_A {
    data=substr(_PACKET_IPV6_NAME(echo_reply_1280_to_A),0,1232);
}

//////////////////////////
// Fragmented packets

// size = 1200

PMTU_fragment( 
        frag_echo_reply_1280_1st_mtu1200_A,
        _HETHER_nut2tn,
                {
                NextHeader=44;
                _SRC(NUT_GLOBAL_ADDRESS);
                _DST(v6("3ffe:501:ffff:10a0::1"));
        },
                {
             NextHeader=58;
             FragmentOffset=0;
             MFlag=1;  
             Identification=any;
        },
                {
        data=substr(_PACKET_IPV6_NAME(echo_reply_1280_to_A),40,1152);
        }
)

PMTU_fragment(
        frag_echo_reply_1280_2nd_mtu1200_A,
        _HETHER_nut2tn,
                {
                NextHeader=44;
                _SRC(NUT_GLOBAL_ADDRESS);
                _DST(v6("3ffe:501:ffff:10a0::1"));
        },
                {
             NextHeader=58;
             FragmentOffset=144;
             MFlag=0;
             Identification=any;
        },
                {
        data=substr(_PACKET_IPV6_NAME(echo_reply_1280_to_A),1192,88);
        }
)

