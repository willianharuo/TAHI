#include "icmp.def"

//----------------------------------------------------------------------
// UDP packet
//----------------------------------------------------------------------

FEM_hdr_ipv6_exth(
	udp_pkt,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(v6(_ALLNODES_MCAST_ADDR));
	},
	{
		header = _HDR_IPV6_NAME(udp_pkt);
		upper = udp;
	}
)

//----------------------------------------------------------------------
// UDP header and data
//----------------------------------------------------------------------

Upp_UDP udp {
	header = udp_hdr;
	payload = ping_data;
}

Hdr_UDP udp_hdr {
	SourcePort = 8000;
	DestinationPort = 8000;
}

//----------------------------------------------------------------------
// Destination Unreachable and data
//----------------------------------------------------------------------

FEM_icmp6_destination_unreachable(
	dst_unreach,
	_HETHER_nut2tn,
	{
		_SRC(oneof(NUT_GLOBAL, nutv6()));
		_DST(tnv6());
	},
	{
		Code = 4;
		payload = err;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(udp_pkt), 0);
}
