#include "icmp.def"

//----------------------------------------------------------------------
// ICMP echo request
//----------------------------------------------------------------------

FEM_icmp6_echo_request(
	echo_request,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		payload = ping_data;
	}
)

//----------------------------------------------------------------------
// ICMP echo reply
//----------------------------------------------------------------------

FEM_icmp6_echo_reply(
	echo_reply,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		payload = ping_data;
	}
)

//----------------------------------------------------------------------
// Destination Unreachable
//----------------------------------------------------------------------

FEM_icmp6_destination_unreachable_exth(
	dst_unreach,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
	},
	{
		header = _HDR_IPV6_NAME(dst_unreach);
		exthdr = dst_hdr;
		exthdr = hbh_hdr;
		upper = _ICMPV6_NAME(dst_unreach);
	},
	{
		Code = 3;
		payload = unreach;
	}
)

//----------------------------------------------------------------------
// Extension Headers, option and data
//----------------------------------------------------------------------

Hdr_Destination dst_hdr {
	option = pad;
}

Hdr_HopByHop hbh_hdr {
	option = pad;
}

Opt_PadN pad {
	pad = {0,0,0,0};
}

Payload unreach {
	data = right(_PACKET_IPV6_NAME(echo_reply), 0);
}

//----------------------------------------------------------------------
// ICMP Parameter Problem and data
//----------------------------------------------------------------------

FEM_icmp6_parameter_problem(
	parameter_problem,
	_HETHER_nut2tn,
	{
		_SRC(nutv6());
		_DST(tnv6());
	},
	{
		Code = 1;	// unrecognized Next Header type encounted
		Pointer = 40;
		payload = err;
	}
)

Payload err {
	data = right(_PACKET_IPV6_NAME(dst_unreach), 0);
}

//----------------------------------------------------------------------
// Neighbor Solicitation and Neighbor Advertisement
//----------------------------------------------------------------------

FEM_icmp6_ns(
	ns,
	_HETHER_nut2tnsolnode,
	{
		_SRC(nutv6());
		_DST(oneof(tnv6(), _IPV6_SOLNODE_MCAST(tnv6())));
		HopLimit = 255;
	},
	{
		TargetAddress = tnv6();
		option = _SLLOPT_nut;
	}
)

FEM_icmp6_na(
	na,
	_HETHER_tn2nut,
	{
		_SRC(tnv6());
		_DST(nutv6());
		HopLimit = 255;
	},
	{
		SFlag = 1;
		OFlag = 1;
		TargetAddress = tnv6();
		option = _TLLOPT_tn;
	}
)
