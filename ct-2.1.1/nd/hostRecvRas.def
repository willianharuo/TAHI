//----------------------------------------------------------------------
// unicast NA
//	TN(link-local) ==> NUT(link-local)
//	R=1, S=1, O=1
//	w/ TLLA
//----------------------------------------------------------------------
FEM_icmp6_na(unicast_na_tn2nut_RSO_tll, _HETHER_tn2nut,
        {
         _SRC(tnv6());
         _DST(nutv6());
         HopLimit=255;
        },
        {
         RFlag=1;
         SFlag=1;
         OFlag=1;
         TargetAddress=tnv6();
         option=_TLLOPT_tn;
        }
)

//----------------------------------------------------------------------
// echo-request
//      X(off-link global, but max:TN) ==> NUT(global)
//----------------------------------------------------------------------
FEM_icmp6_echo_request(echo_request_x2nut_a, _HETHER_tn2nut,
        {
         _SRC(v6merge(_GLOBAL9_UCAST_PRFX, _GLOBAL9_UCAST_PRFXLEN,
                        v6ether(A9N_MAC_ADDR)));
         _DST(nut2v6(_GLOBAL0_UCAST_PRFX, _GLOBAL0_UCAST_PRFXLEN));
        },
        {
         payload=echo_data_a;
        }
)

