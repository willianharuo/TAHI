#define IPSEC_ECHO_DATA	echo_data_pad255

Payload echo_data_pad255 {
	data = repeat(0xff, 247);
}

#define PROTO_TYPE	udp

#include "./HTR_E_common.def"

ESPAlgorithm ealgo_rijndael128cbc_012_pad_255 {
	crypt = rijndael_128("TAHITEST89ABCDEF", "0000000000000000", 16);
	//pad = sequential();
	//pad = allzero();
	//pad = random();
}

Hdr_ESP esp_from_host1_pad_255 {
	SPI = 0x1000;
	SequenceNumber = 1;
	algorithm = ealgo_rijndael128cbc_012_pad_255;
}

Hdr_ESP esp_to_host1_pad_255 {
	SPI = 0x1000;
	SequenceNumber = any;	// 1;
	algorithm = ealgo_rijndael128cbc_012_pad_255;
}

//======================================================================
//
// Echo Request from Host1 IPsec ESP (Padding Length = 0)
//

FEM_udp6_echo_request_exth(
	echo_request_from_host1_esp_pad_255,
	hether_router2nut,
	{
		_SRC(v6(IPSEC_HOST1_NET5_ADDR));
		_DST(v6(IPSEC_NUT_NET3_ADDR));
	},
	{
		header = _HDR_IPV6_NAME(echo_request_from_host1_esp_pad_255);
		exthdr = esp_from_host1_pad_255;
		upper = _UDPV6_NAME(echo_request_from_host1_esp_pad_255);
	},
	{
		header = _HDR_UDPV6_NAME(echo_request_from_host1_esp_pad_255);
		payload = IPSEC_ECHO_DATA;
	}
)

//======================================================================
//
// Echo Reply to Host1 IPsec ESP (Padding Length = 0)
//

FEM_udp6_echo_reply_exth(
	echo_reply_to_host1_esp_pad_255,
	hether_nut2router,
	{
		_SRC(v6(IPSEC_HOST1_NET5_ADDR));
		_DST(v6(IPSEC_NUT_NET3_ADDR));
	},
	{
		header = _HDR_IPV6_NAME(echo_reply_to_host1_esp_pad_255);
		exthdr = esp_from_host1_pad_255;
		upper = _UDPV6_NAME(echo_reply_to_host1_esp_pad_255);
	},
	{
		header = _HDR_UDPV6_NAME(echo_reply_to_host1_esp_pad_255);
		payload = IPSEC_ECHO_DATA;
	}
)

